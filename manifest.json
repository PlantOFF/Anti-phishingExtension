{
  "manifest_version": 3,
  "name": "Iron wall",
  "description": "Защитите себя от мошенников в интернете с помощью этого расширения. Оно блокирует фишинговые сайты и предупреждает о подозрительных ссылках, обеспечивая безопасный просмотр. Установите его бесплатно!",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "history",
    "storage",
    "scripting"
  ],
  "icons": {
    "16": "icons/16icon.png",
    "48": "icons/48icon.png",
    "96": "icons/96icon.png",
    "128": "icons/128icon.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "main.js"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/16icon.png",
      "48": "icons/48icon.png",
      "96": "icons/96icon.png",
      "128": "icons/128icon.png"
    }
  }
}
